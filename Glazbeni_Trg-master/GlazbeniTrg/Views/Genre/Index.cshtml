@model IEnumerable<Genre>

@if (ViewBag.Message != null)
{
    <script>

$(document).ready(function(){

alert('@ViewBag.Message');

});

    </script>

}
<h5> </h5>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Žanr</th>
        <th class="text-center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">@item.GenreName</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.GenreID" class="btn btn-warning btn-sm">Uredi</a>
                <form asp-action="Delete" asp-route-id="@item.GenreID" method="POST" style="display: inline-block">
                    <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
                </form>
            </td>

        </tr>
    }
</table>


<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Dodaj zanr</a>
</div>

