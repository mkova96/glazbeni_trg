@model IEnumerable<Song>

<h5> </h5>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Pjesma</th>
        <th class="text-center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                <form asp-action="Show" method="post">

                    <input type="hidden" name="SongID" value="@item.SongID" />
                    <button type="submit" class="btn btn-link">
                        @item.SongName
                    </button>
                </form>
            </td>

            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.SongID" class="btn btn-warning btn-sm">Uredi</a>
                <form asp-action="Delete" asp-route-id="@item.SongID" method="POST" style="display: inline-block">
                    <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
                </form>
            </td>



        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Dodaj pjesmu</a>
</div>


