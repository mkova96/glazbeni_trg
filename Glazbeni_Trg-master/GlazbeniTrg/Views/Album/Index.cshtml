@model IEnumerable<Album>

<h5> </h5>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Ime albuma</th>
        <th class="text-center">Cijena</th>
        <th class="text-center">Količina</th>
        <th class="text-center"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th class="text-center">@item.AlbumID.ToString()</th>

            <td class="text-center">
                <form asp-action="Show" method="post">

                    <input type="hidden" name="AlbumID" value="@item.AlbumID" />
                    <button type="submit" class="btn btn-link">
                        @item.AlbumName
                    </button>
                </form>
            </td>
            <td class="text-center">@item.Price.ToString("c")</td>
            <td class="text-center">@item.Stock</td>

            <td class="text-center">
                


            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Dodaj album</a>
</div>

