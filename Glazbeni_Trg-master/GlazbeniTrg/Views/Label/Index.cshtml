@model IEnumerable<Label>
    <h5> </h5>
    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-center">Izdavačka kuća</th>
            <th class="text-center"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.LabelName</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.LabelID" class="btn btn-warning btn-sm">Uredi</a>
                    <form asp-action="Delete" asp-route-id="@item.LabelID" method="POST" style="display: inline-block">
                        <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
                    </form>
                </td>

            </tr>
        }
    </table>


    <div class="text-center">
        <a asp-action="Add" class="btn btn-primary">Dodaj izdavačku kuću</a>
    </div>

